        compare str.available (Known 0) and
        compare str.finished? true and
        ( str.close (); true )
),

"mixedTo-2-1-\(name)": \(
    str = filt.mixedTo 1
       (filt.multiplexed
          [maybeDuration 3 (syn.generated 2 id),
